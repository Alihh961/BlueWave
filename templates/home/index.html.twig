{% extends 'base.html.twig' %}


{% block body %}

    <style>
        .products {
            display: flex;
            width: 90%;
            flex-wrap: wrap;
            margin: 50px auto 0 auto;
            gap: 25px;
            justify-content: center;
        }

        .product-container {
            display: block;
            max-width: 200px;
            border-radius: 5px;
            overflow: hidden;
            color: white;
            text-decoration: none;


        }

        .product-container:hover {
            opacity: 0.5;
        }

        .product {
            width: 100%;
            display: flex;
            flex-direction: column;
            margin-bottom: 25px;

        }

        .product img {
            width: 100%;
        }

        .product h6 {
            text-align: center;
            margin: 0;
            padding: 5px 0;
            background-color: #1c7430;
            border-bottom-left-radius: 5px;
            border-bottom-right-radius: 5px;

        }


    </style>
    <section class="products">

    {% for item in items %}

        <a class="product-container" href="view-product?c={{ item["category_name"] }}">

            <div class="product">

                <img class="" src="{{ asset('images/test.png') }}"
                     alt="{{ item["category_name"] }}">
                <h6>{{ item["category_name"] }}</h6>

            </div>
        </a>

    {% endfor %}

    </section>
{% endblock %}
