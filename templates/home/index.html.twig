{% extends 'base.html.twig' %}


{% block body %}


    <div class="m-auto w-fit">
        {{ form_start(form, {
            "attr" : {"class" : "searchForm-homePage"}
        }) }}
        <div class="d-flex gap-3 search-div align-items-center">
            {{ form_label(form.gameName, 'Game Name :', {'label_attr': {'class': ''}}) }}
            {{ form_widget(form.gameName , {"attr" : {"class": ""}}) }}
        </div>
        <div class="col-12 text-center mt-2">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        {{ form_end(form) }}
    </div>
    <section class="products">

    {% if categories %}

        {% for category in categories %}

            <a class="product-container" href="view-product?c={{ category.id }}">

                <div class="product">

                    <img class="" src="{{ asset('images/test.png') }}"
                         alt="{{ category.name }}">
                    <h6>{{ category.name }}</h6>

                </div>
            </a>

        {% endfor %}

        </section>

        <div class="navigation m-auto w-fit">
            {{ knp_pagination_render(categories, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
        </div>

    {% else %}
        <h2 class="w-fit m-auto">No items to display</h2>

    {% endif %}
{% endblock %}
