{% block body %}


    <div class="header-container">

        <div class="header-left-side">
            <img src="{{ asset('assets/images/logo.png') }}" alt="logo" class="header-logo"
                 style="width: 50px; height: 20px">
            <h1>Blue Wave</h1>
        </div>

        <a href="/shopping-basket">

            <i class="fa-solid fa-basket-shopping shopping-basket"></i>
        </a>

        {% if not app.user %}

            <div class="header-right-side">

                <a href='{{ path('app_login') }}' class="user-icon">
                    <i class="fa-regular fa-user"></i>
                </a>

                <a class="burger-icon">
                    <i class="fa-solid fa-bars"></i>
                </a>

            </div>

        {% else %}
            <div class="header-right-side">

                {% if app.user.isPro is defined and app.user.isPro %}


                {% else %}

                {% endif %}

                <span class="balance"><i class="fa-solid fa-plus add-balance"></i>{{ app.user.currentBalance }} <i
                            class="fa-solid fa-dollar-sign"></i></span>

                <a class="burger-icon">
                    <i class="fa-solid fa-bars"></i>
                </a>
            </div>

        {% endif %}


    </div>



    <script>
        window.addEventListener('scroll', function() {
            const header = document.querySelector('.header-container');
            if (window.scrollY > 50) { // You can adjust the scroll distance
                header.classList.add('scroll');
            } else {
                header.classList.remove('scroll');
            }
        });
    </script>



{% endblock %}
