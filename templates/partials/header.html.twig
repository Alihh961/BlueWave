{% block body %}

    <div class="header-container">
        <img src="" alt="logo">
        {% if not app.user %}

        <nav class="justify-content-evenly">

            {% else %}
            <nav>
                {% endif %}

                <a href="{{ path('app_home') }}">Home</a>
                <a href="#">Accessories</a>

                {% if not app.user %}

                    <a href="{{ path("app_login") }}">Login</a>
                    <a href="{{ path("app_register") }}">Register</a>

                {% endif %}

                {% if app.user %}

                    <a href="{{ path('app_my_orders') }}">My orders</a>

                    {% if is_granted("ROLE_ADMIN") %}
                        <a href="/admin">Administration</a>
                    {% endif %}

                    <div class="container-dropDown">
                        <div class="drop">
                            <input id="toggle" type="checkbox" checked>
                            <h5 class="toto"><span class="currentBalance">{{ app.user.currentBalance }}$</span>
                                <span
                                        class="userName">{{ app.user.firstName }} {{ app.user.lastName }}</span><span
                                        class="arrow"></span></h5>
                            <ul id="dropList">
                                <li><a href="{{ path('app_user_profile') }}">Your profile</a></li>
                                <li><a href="{{ path('app_user_profile_edit') }}">Edit your profile</a></li>
                                <li><a href="{{ path('app_logout') }}">logout</a></li>

                            </ul>
                        </div>

                    </div>

                {% endif %}


            </nav>


    </div>



{% endblock %}
