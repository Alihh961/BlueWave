{% extends 'base.html.twig' %}

{% block title %}Accessories{% endblock %}

{% block body %}
    <a href="/shopping-basket">

        <i class="fa-solid fa-basket-shopping shopping-basket"></i>
    </a>



    {% if(categories) %}


        {% for category in categories %}

            <section class="d-flex flex-column px-2 acc-container">
                {% if category.items|length %}

                    <h2 class="text-center text-white p-2">{{ category.name }}</h2>


                    <div class="d-flex flex-row flex-wrap gap-2 justify-content-center">


                        {% for item in category.items %}

                            {% if item.available %}

                                <div class="pro">
                                    <div class="pro-container">

                                        {% if item.url %}
                                            <div class="top" style="
                                                    background-image: url('{{ asset("assets/images/items/") }}{{ item.url }}');
                                                    background-position: center center;
                                                    background-repeat: no-repeat;
                                                    background-size: 100% 100%;
                                                    "></div>
                                        {% else %}
                                            <div class="top" style="
                                                    background-image: url('{{ asset("img.png") }}');
                                                    background-position: center center;
                                                    background-repeat: no-repeat;
                                                    background-size: 100% 100%;
                                                    "></div>

                                        {% endif %}

                                        <div class="bottom">
                                            <div class="info">
                                                <h6>{{ item.name|capitalize }}</h6>
                                                <h4>{{ item.price|removeTrailingZeros }} $</h4>
                                            </div>

                                            <div class="add-to-shopping-bag" data-id='{{ item.id }}'><i
                                                        class="fa-solid fa-cart-plus"></i></div>
                                        </div>

                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>



                {% endif %}
            </section>
        {% endfor %}

    {% else %}

        <h2 style="margin: auto;
    width: fit-content;">No accessories to be shown</h2>

    {% endif %}

    <script>

    </script>


{% endblock %}
